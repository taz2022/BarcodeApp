<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Multi Barcode Generator</title>
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.0/dist/JsBarcode.all.min.js"></script>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; }
        .container { width: 60%; margin: auto; text-align: center; }
        .form-group { display: flex; justify-content: center; align-items: center; margin: 5px 0; }
        .form-group label { width: 150px; text-align: right; margin-right: 10px; }
        .form-group input { padding: 5px; width: 200px; }
        button { padding: 10px; margin-top: 10px; cursor: pointer; }

        .preview-box {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            margin-top: 20px;
            text-align: center;
        }

        .barcode-entry {
            border: 1px solid #ccc;
            padding: 15px;
            margin-bottom: 10px;
            background: #f9f9f9;
            border-radius: 5px;
            position: relative;
        }

        .remove-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: red;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 5px;
        }

        @media print {
            body * {
                visibility: hidden;
            }
            #print-section, #print-section * {
                visibility: visible;
            }
            #print-section {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Multi Barcode Generator</h2>

        <div id="barcode-container">
            <!-- Barcodes will be dynamically added here -->
        </div>

        <button onclick="addBarcode()">Add Barcode</button>
        <button onclick="printBarcodes()">Print</button>
    </div>

    <div id="print-section">
        <!-- This section is hidden but used for printing -->
    </div>

    <script>
        let barcodeCount = 0;
        const maxBarcodes = 5;

        function addBarcode() {
            if (barcodeCount >= maxBarcodes) return;
            barcodeCount++;

            let barcodeHTML = `
                <div class="barcode-entry" id="barcode-entry-${barcodeCount}">
                    <button class="remove-btn" onclick="removeBarcode(${barcodeCount})">X</button>
                    <h3>Barcode ${barcodeCount}</h3>
                    <div class="form-group">
                        <label>Customer:</label>
                        <input type="text" id="customer-${barcodeCount}" value="customer${barcodeCount}">
                    </div>
                    <div class="form-group">
                        <label>Product:</label>
                        <input type="text" id="product-${barcodeCount}" value="product${barcodeCount}">
                    </div>
                    <div class="form-group">
                        <label>Box:</label>
                        <input type="number" id="box-${barcodeCount}" value="999">
                    </div>
                    <div class="form-group">
                        <label>Packet:</label>
                        <input type="number" id="packet-${barcodeCount}" value="99">
                    </div>
                    <div class="form-group">
                        <label>Last Alpha:</label>
                        <input type="text" id="lastAlpha-${barcodeCount}" value="A">
                    </div>
                    <div class="preview-box">
                        <svg id="barcode-preview-${barcodeCount}"></svg>
                        <p id="barcode-text-${barcodeCount}"></p>
                    </div>
                </div>
            `;

            document.getElementById("barcode-container").insertAdjacentHTML("beforeend", barcodeHTML);
            document.querySelectorAll(`#barcode-entry-${barcodeCount} input`).forEach(input => {
                input.addEventListener("input", () => generateBarcode(barcodeCount));
            });

            generateBarcode(barcodeCount);
        }

        function removeBarcode(id) {
            let barcodeElement = document.getElementById(`barcode-entry-${id}`);
            if (barcodeElement) {
                barcodeElement.remove();
                barcodeCount--;
            }
        }

        function generateBarcode(id) {
            let customer = document.getElementById(`customer-${id}`).value;
            let product = document.getElementById(`product-${id}`).value;
            let box = document.getElementById(`box-${id}`).value.padStart(4, '0');
            let packet = document.getElementById(`packet-${id}`).value.padStart(4, '0');
            let lastAlpha = document.getElementById(`lastAlpha-${id}`).value.toLowerCase();

            let barcodeData = `${customer}-${product}-${box}-${packet}-000${lastAlpha}-000_`;

            // Generate barcode
            let barcodeSvg = document.getElementById(`barcode-preview-${id}`);
            barcodeSvg.innerHTML = "";
            JsBarcode(barcodeSvg, barcodeData, {
                format: "CODE128",
                displayValue: true,
                fontSize: 18
            });

            // Update barcode text
            document.getElementById(`barcode-text-${id}`).innerText = barcodeData;
        }

        function printBarcodes() {
            let printSection = document.getElementById("print-section");
            printSection.innerHTML = ""; // Clear previous barcodes

            document.querySelectorAll(".barcode-entry").forEach((entry, index) => {
                let barcodeData = document.getElementById(`barcode-text-${index + 1}`).innerText;

                let printHTML = `
                    <div style="text-align:center; margin-bottom: 20px;">
                        <svg id="print-barcode-${index + 1}"></svg>
                        <p>${barcodeData}</p>
                    </div>
                `;
                printSection.insertAdjacentHTML("beforeend", printHTML);
            });

            // Wait for DOM to update and generate barcodes for printing
            setTimeout(() => {
                document.querySelectorAll(".barcode-entry").forEach((entry, index) => {
                    let barcodeData = document.getElementById(`barcode-text-${index + 1}`).innerText;
                    JsBarcode(`#print-barcode-${index + 1}`, barcodeData, {
                        format: "CODE128",
                        displayValue: true,
                        fontSize: 18
                    });
                });

                // Print only the barcode section
                window.print();
            }, 500);
        }

        // Auto-add first barcode on page load
        window.onload = () => addBarcode();
    </script>
</body>
</html>
